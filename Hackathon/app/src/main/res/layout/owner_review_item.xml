<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="24dp"
android:background="@drawable/owner_review_background"
    android:layout_marginRight="24dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">


    <TextView
        android:textSize="12sp"
        android:textColor="@color/black"
        android:id="@+id/review_name_txt"
        android:layout_width="42dp"
        android:layout_height="19dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="김진근" />

    <TextView

        android:layout_margin="12dp"
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        tools:text="4.5"
        app:drawableLeftCompat="@drawable/owner_main_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/green"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:id="@+id/review_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/review_name_txt"
        app:layout_constraintTop_toBottomOf="@id/review_name_txt"
        tools:text="완전 맛있어요 대 추천!!!" />

    <TextView
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/review_title_txt"
        app:layout_constraintTop_toBottomOf="@id/review_title_txt"
        tools:text="내 답글: 감사합니다 앞으로도 많은 이용해 주..." />

</androidx.constraintlayout.widget.ConstraintLayout>